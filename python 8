using System;

public class Animal
{
    // Virtual metod, türeyen sınıflar tarafından override edilebilir
    public virtual void Speak()
    {
        Console.WriteLine("The animal makes a sound");
    }
}

public class Dog : Animal
{
    // Base sınıftaki virtual metod override ediliyor
    public override void Speak()
    {
        Console.WriteLine("The dog barks");
    }
}

public class Cat : Animal
{
    // Base sınıftaki virtual metod override ediliyor
    public override void Speak()
    {
        Console.WriteLine("The cat meows");
    }
}

class Program
{
    static void Main()
    {
        Animal myAnimal = new Animal();
        myAnimal.Speak();  // Çıktı: The animal makes a sound

        Animal myDog = new Dog();
        myDog.Speak();  // Çıktı: The dog barks

        Animal myCat = new Cat();
        myCat.Speak();  // Çıktı: The cat meows
    }
}
