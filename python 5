class calisan:
    
    zam_oranı = 1.05
    per_say = 0

    def __init__(self,ad,soyad,maas):
        self.ad = ad
        self.soyad = soyad
        self.maas = maas
        self.eposta = self.ad + self.soyad +"@gmail.com"
        calisan.per_say += 1
    def tamad(self):
        return "adı : {} soyadı : {}".format(self.ad,self.soyad)
    def arttir(self):
        self.maas = (self.maas * self.zam_oranı)

personel1 = calisan("Ali","demir",2500)
print(calisan.per_say)

personel2 = calisan("kerim","bakir",1950)
print(calisan.per_say)

# print(personel1.maas)
# personel1.arttir()
# print(personel1.maas)

print(personel2.maas)
personel2.zam_oranı = 1.1       # Değiştirebiliyoruz
personel2.arttir()
print(personel2.maas)


