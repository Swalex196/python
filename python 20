from abc import ABC, abstractmethod

# TelefonFabrikasi soyut sınıfı
class TelefonFabrikasi(ABC):
    def __init__(self, model, uretici, batarya_kapasitesi):
        self.model = model
        self.uretici = uretici
        self.batarya_kapasitesi = batarya_kapasitesi

    def sarj_durumu(self):
        print(f"{self.model} cihazının batarya kapasitesi: {self.batarya_kapasitesi} mAh")

    @abstractmethod
    def arama_yap(self, numara):
        pass

    @abstractmethod
    def mesaj_gonder(self, numara, mesaj):
        pass

    @abstractmethod
    def ozellikleri_goster(self):
        pass

# IPhone sınıfı
class IPhone(TelefonFabrikasi):
    def __init__(self, model, batarya_kapasitesi, kamera_megapiksel):
        super().__init__(model, "Apple", batarya_kapasitesi)
        self.isletim_sistemi = "iOS"
        self.kamera_megapiksel = kamera_megapiksel

    def arama_yap(self, numara):
        print(f"{self.model} (Apple) numarayı arıyor: {numara}")

    def mesaj_gonder(self, numara, mesaj):
        print(f"{self.model} (Apple) numaraya mesaj gönderiyor: {numara} - '{mesaj}'")

    def ozellikleri_goster(self):
        print(f"Model: {self.model}")
        print(f"Üretici: {self.uretici}")
        print(f"Batarya Kapasitesi: {self.batarya_kapasitesi}mAh")
        print(f"İşletim Sistemi: {self.isletim_sistemi}")
        print(f"Kamera: {self.kamera_megapiksel} MP")

# Samsung sınıfı
class Samsung(TelefonFabrikasi):
    def __init__(self, model, batarya_kapasitesi, suya_dayaniklilik):
        super().__init__(model, "Samsung", batarya_kapasitesi)
        self.isletim_sistemi = "Android"
        self.suya_dayaniklilik = suya_dayaniklilik

    def arama_yap(self, numara):
        print(f"{self.model} (Samsung) numarayı arıyor: {numara}")

    def mesaj_gonder(self, numara, mesaj):
        print(f"{self.model} (Samsung) numaraya mesaj gönderiyor: {numara} - '{mesaj}'")

    def ozellikleri_goster(self):
        print(f"Model: {self.model}")
        print(f"Üretici: {self.uretici}")
        print(f"Batarya Kapasitesi: {self.batarya_kapasitesi}mAh")
        print(f"İşletim Sistemi: {self.isletim_sistemi}")
        print(f"Suya Dayanıklılık: {self.suya_dayaniklilik}")

# Kullanıcıdan giriş alma ve telefon nesneleri oluşturma
def telefon_olustur():
    while True:
        uretici = input("Telefon üreticisini seçin (Apple veya Samsung): ").strip().lower()
        if uretici in ["apple", "samsung"]:
            model = input("Telefon modelini girin: ")
            batarya_kapasitesi = int(input("Batarya kapasitesini girin (mAh): "))

            if uretici == "apple":
                kamera_megapiksel = int(input("Kamera megapiksel değerini girin: "))
                return IPhone(model, batarya_kapasitesi, kamera_megapiksel)
            elif uretici == "samsung":
                suya_dayaniklilik = input("Suya dayanıklılık derecesini girin (ör. IP68): ")
                return Samsung(model, batarya_kapasitesi, suya_dayaniklilik)
        else:
            print("Geçersiz üretici seçimi. Lütfen 'Apple' veya 'Samsung' seçiniz.")

# Telefonu oluştur ve işlemleri gerçekleştir
telefon = telefon_olustur()
telefon.sarj_durumu()
    
numara = input("\nArama yapmak istediğiniz numarayı girin: ")
telefon.arama_yap(numara)

mesaj_numara = input("\nMesaj göndermek istediğiniz numarayı girin: ")
mesaj = input("Göndermek istediğiniz mesajı yazın: ")
telefon.mesaj_gonder(mesaj_numara, mesaj)

print("\nTelefon Özellikleri:")
telefon.ozellikleri_goster()
