class Character:
    def __init__(self, name, health, damage):
        self.name = name                  # Public
        self._health = health             # Protected
        self.__damage = damage            # Private

    def attack(self, target):
        print(f"{self.name} attacks {target.name} for {self.__damage} damage!")
        target._take_damage(self.__damage) // self.__damage'e göre _take_damage oluştur buda hedefi yapılan saldırı metodu attack içinde yadırdı en altta sadece player.attack() yazarsak bu değerler gelir

    def _take_damage(self, damage):       # Protected
        self._health -= damage
        if self._health > 0:
            print(f"{self.name} has {self._health} health left.")
        else:
            print(f"{self.name} has been defeated!")

    def get_damage(self):                 # Public method to access private attribute
        return self.__damage

# Oyuncu karakteri
class Player(Character):
    def __init__(self, name, health, damage, level):
        super().__init__(name, health, damage)
        self.level = level                # Public

    def display_info(self):
        print(f"Player: {self.name}, Health: {self._health}, Damage: {self.get_damage()}, Level: {self.level}")

# Düşman karakteri
class Enemy(Character):
    def __init__(self, name, health, damage, enemy_type):
        super().__init__(name, health, damage)
        self.enemy_type = enemy_type      # Public

    def display_info(self):
        print(f"Enemy: {self.name}, Type: {self.enemy_type}, Health: {self._health}, Damage: {self.get_damage()}")

# Kullanıcıdan veri alma fonksiyonu
def create_player():
    name = input("Enter player name: ")
    health = int(input("Enter player health: "))
    damage = int(input("Enter player damage: "))
    level = int(input("Enter player level: "))
    return Player(name, health, damage, level)

def create_enemy():
    name = input("Enter enemy name: ")
    health = int(input("Enter enemy health: "))
    damage = int(input("Enter enemy damage: "))
    enemy_type = input("Enter enemy type: ")
    return Enemy(name, health, damage, enemy_type)

# Oyuncu ve düşmanı oluştur
player = create_player()
enemy = create_enemy()

# Bilgileri yazdır
player.display_info()
enemy.display_info()

# Saldırılar
player.attack(enemy)
enemy.attack(player)
